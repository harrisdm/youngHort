<h1>Edit</h1>


<%= fetch_profile_image_model(@mentor) %>
<%= link_to "Remove Image", delete_img_mentor_path, method: :delete %>


<%= form_for @mentor do |f| %>
  <div>
    <%= f.label :name %>
    <div><%= f.text_field :name %></div>
  </div>
  <div>
    <%= f.label :link %>
    <div><%= f.text_field :link, :placeholder => "Copy and paste link" %></div>
  </div>
  <div>
    <%= f.label :bio %>
    <div><%= f.text_area :bio %></div>
  </div>
  <div>
    <%= m.label :bio %>
    <div><%= m.text_area :bio, :id => "postContent" %></div>
  </div>
  <div>
    <%= f.label :image %>
    <div><%= f.file_field :image %></div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

