<h2> individual post page </h2>

<% if current_user.profile.admin? %>
  <%= link_to('Edit', edit_post_path) %>
  <%= link_to('Delete', post_path, :method => :delete, data: {confirm: 'Are you sure you want to delete this post?'}) %>
<% end %>


<div class="col-md-8 col-centered text-center">
  <h2> <%= @post.title %> </h2>
</div> 

<div class="col-md-8 col-centered text-left post">
  <%== @post.content %>
</div>

<div class="row col-centered">
  <div class="col-md-6 image"> <%= image_tag(@post.image1) %> </div>
  <div class="col-md-6 image"> <%= image_tag(@post.image2) %> </div>
  <div class="col-md-6 image"> <%= image_tag(@post.image3) %> </div> 
  <div class="col-md-6 image"> <%= image_tag(@post.image4) %> </div>
  <div class="col-md-6 image"> <%= image_tag(@post.image5) %> </div> 
</div>

